{
  "name": "lavajato-monorepo",
  "version": "1.0.0",
  "description": "Monorepo para sistema de lavajato com backend, web e mobile",
  "main": "index.js",
  "scripts": {
    "dev:backend": "cd backend && npm run start:dev",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../web && npm install && cd ../mobile && npm install",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["monorepo", "nestjs", "nextjs", "react-native", "expo"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1"
  }
}
